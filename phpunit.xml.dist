<phpunit
    backupGlobals               = "false"
    backupStaticAttributes      = "false"
    colors                      = "true"
    convertErrorsToExceptions   = "true"
    convertNoticesToExceptions  = "true"
    convertWarningsToExceptions = "true"
    processIsolation            = "false"
    stopOnFailure               = "true"
    syntaxCheck                 = "false"
    bootstrap="vendor/autoload.php">

    <testsuites>
        <testsuite name="AurekaDisqusBundle Test Suite">
            <directory>src/Aureka/DisqusBundle/Tests</directory>
        </testsuite>
    </testsuites>

</phpunit>
